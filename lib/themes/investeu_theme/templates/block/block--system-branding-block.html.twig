{#
/**
 * @file
 * Theme override for the branding block.
 *
 * @see ./core/modules/system/templates/block--system-branding-block.html.twig
 */
#}
{% block content %}
  <a
    class="ecl-link ecl-link--standalone"
    href="{{ site_logo_href }}"
    aria-label="{{ site_logo_alt }}"
  >
    <img
      alt="{{ site_logo_alt }}"
      title="{{ site_logo_alt }}"
      class="ecl-site-header__logo-image"
      src="{{ ecl_logo_path ~ '/logo--' ~ current_language_id|to_internal_language_id ~ '.svg'}}"
    />
  </a>
{% endblock %}
